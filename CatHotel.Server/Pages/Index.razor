@page "/"

@inject IHotelRoomRepository HotelRoomRepository
@inject IAmenityRepository AmenitiesRepository

<style>
    .card {
        margin: 20px 0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        border-radius: 15px;
        transition: transform 0.3s, box-shadow 0.3s;
        background: #0E3A8A; 
        color: #fff;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-family: 'Arial Black', sans-serif;
        font-size: 1.8em;
        color: #fff;
        margin-bottom: 20px;
    }

    .card-text {
        font-family: 'Arial', sans-serif;
        font-size: 1.2em;
        color: #fff;
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #ff8c00;
        border-color: #ff8c00;
        transition: background-color 0.3s, border-color 0.3s;
        border-radius: 50px;
        padding: 10px 20px;
        font-size: 1.1em;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #e07b00;
            border-color: #d06b00;
        }

    .card-icon {
        font-size: 2.5em;
        color: #ff8c00;
        margin-right: 10px;
    }
</style>
<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Hotel Rooms</h5>
                <p class="card-text">Hotel Rooms Count: @HotelRoomsCount</p>
                <NavLink class="btn btn-primary" href="hotel-room">
                    Go To Hotels
                </NavLink>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Amenities</h5>
                <p class="card-text">Amenities Count: @AmenitiesCount</p>
                <NavLink class="btn btn-primary" href="hotel-amenity">
                    Go To Amenities
                </NavLink>
            </div>
        </div>
    </div>
</div>


@code {
    public int HotelRoomsCount { get; set; }
    public int AmenitiesCount { get; set; }

    protected override async Task OnInitializedAsync()
    {
        HotelRoomsCount = await HotelRoomRepository.GetHotelRoomCount();
        AmenitiesCount = await AmenitiesRepository.GetAmenitiesCount();
    }

   
}
